#!/bin/bash

set -e
if [[ ! -f ./releaser ]];then
  wget --quiet http://http.archive.ai-traders.com/releaser/1.0.0/releaser
fi
source ./releaser
releaser_init

command="$1"
case "${command}" in
  bump)
      bump_changelog_and_oversion "$2"
      exit $?
      ;;
  verify_version)
      verify_version_for_release
      exit $?
      ;;
  itest)
      time bats ./test/integration/*.bats
      exit $?
      ;;
  release)
      verify_version_for_release
      git_tag_from_oversion
      exit $?
      ;;
  publish)
      # publish the just released version
      version=$(get_last_git_tagged_version)
      publish_to_archive "docker-ops" "${version}" "src/docker-ops"
      exit $?
      ;;
  *)
      echo "Invalid command: '${command}'"
      exit 1
      ;;
esac
set +e
